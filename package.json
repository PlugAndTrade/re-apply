{
  "name": "re-apply",
  "version": "0.1.0",
  "description": "OCaml workflow with Esy",
  "license": "MIT",
  "esy": {
    "build": "refmterr dune build -p #{self.name}",
    "buildsInSource": "_build",
    "release": { "bin": "re-apply", "includePackages": [ "root" ] }
  },
  "scripts": {
    "test": "esy x main.exe",
    "utop": "esy dune utop src -- -implicit-bindings",
    "format": "esy dune build @fmt --auto-promote"
  },
  "dependencies": {
    "@opam/bos": "0.2.0",
    "@opam/cmdliner": "1.0.3",
    "@opam/dune": "*",
    "@opam/lwt": "^4.0.0",
    "@opam/mustache": "3.0.2",
    "@opam/ppx_deriving_yojson": "3.3",
    "@opam/rresult": "0.6.0",
    "@opam/yaml": "1.0.0",
    "@opam/yojson": "1.5.0",
    "ocaml": "~4.6.0",
    "refmterr": "^3.0.0"
  },
  "devDependencies": {
    "@opam/merlin": "^3.0.3",
    "ocaml": "~4.6.0",
    "@opam/ocamlformat": "*",
    "@opam/utop": "*"
  }
}